<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    
	<!-- Make config properties available to both spring and camel -->	
	<bean id="bridgePropertyPlaceholder" class="org.apache.camel.spring.spi.BridgePropertyPlaceholderConfigurer">
	   <property name="properties" ref="ciaoProperties" />
	</bean>
	
	<!-- Select 'dynamic' spring imports - determined via CIAO properties -->
	<import resource="processors/${processorConfig}.xml"/>
	<import resource="repositories/${repositoryConfig}.xml"/>
    
	<camelContext xmlns="http://camel.apache.org/schema/spring" id="camel">
		<package>uk.nhs.itk.ciao.toc</package>
	</camelContext>
</beans>
